@model IEnumerable<dmMoWizz.Models.ViewModels.PopularMovieViewModel>
<div class="parallax-container" style="height:400px">
    <div class="parallax"><img src="/Images/movies.jpg"></div>
</div>
@if (Model.Count() == 0)
{
    <div class="center-align" style="margin-top:50px">
        <i class="material-icons" style="font-size:7rem; color:#26a69a">sentiment_dissatisfied</i>
        <p style="font-style:italic; font-size:1rem">Oops! We didn't find any movie.</p>
    </div>
}
else
{
    <div class="row">
        <div class="col s10 offset-s1">
            <table>
                <thead>
                    <tr></tr>
                </thead>

                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>
                                <div class="row">
                                    <div class="col s3">
                                        <img style="height:300px" src="@movie.PosterURL" />
                                    </div>
                                    <div class="col s9">
                                        <div>
                                            <h3>
                                                @movie.Title (@movie.Year)
                                            </h3>
                                        </div>
                                        @if (movie.Cast != null)
                                        {
                                            <div>
                                                <span style="font-style:italic">@String.Join(", ", movie.Cast.Take(5).Select(x => x.Name))</span>
                                            </div>
                                        }
                                        @if (movie.Genres != null && movie.Genres.Count() > 0)
                                        {
                                            <div class="collection-item"><span class="teal-text">@String.Join(", ", movie.Genres.Select(x => x.Name))</span></div>
                                        }
                                        <hr />
                                        <div>
                                            @movie.Overview
                                        </div>
                                        <a style="font-style:italic; color:#26a69a; font-size:bold" href="/movie/details?movieId=@movie.Id">
                                            See more...
                                        </a>
                                        <div class="row" style="margin-top:50px">
                                            <div class="col s2">
                                                <div class="center-align">
                                                    <div class="valign-wrapper">
                                                        <i class="material-icons" style="color:#26a69a; font-size:3rem">star</i>
                                                        <span style="font-weight:bold; color:#26a69a">@movie.AverageVote</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col s2">
                                                @if (movie.PersonalRate != "-1%")
                                                {
                                                    <div class="valign-wrapper">
                                                        <i class="material-icons" style="color:#26a69a; font-size:3rem">thumb_up</i>
                                                        <span style="font-weight:bold; color:#26a69a; margin-left:15px">@movie.PersonalRate</span>
                                                    </div>
                                                }
                                            </div>
                                            <div class="col s6">
                                                @*<div class="right-align">
                    <a class="waves-effect waves-light btn rate" data-id="@movie.Id"><i class="material-icons left">rate_review</i>Rate</a>
                </div>*@
                                            </div>
                                            <div class="col s2">
                                                <div class="right-align">
                                                    @if (!movie.AddedToWatchlist)
                                                    {
                                                        <a class="waves-effect waves-light btn addtowatchlist" data-id="@movie.Id"><i class="material-icons left">add_to_queue</i>ADD</a>
                                                        <a class="waves-effect waves-light btn removefromwatchlist red lighten-2" style="display:none" data-id="@movie.Id"><i class="material-icons left">remove_from_queue</i>Remove</a>
                                                    }
                                                    else
                                                    {
                                                        <a class="waves-effect waves-light btn addtowatchlist" data-id="@movie.Id" style="display:none"><i class="material-icons left">add_to_queue</i>ADD</a>
                                                        <a class="waves-effect waves-light btn removefromwatchlist red lighten-2" data-id="@movie.Id"><i class="material-icons left">remove_from_queue</i>Remove</a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $('.parallax').parallax();
    });

    $('.addtowatchlist').click(function () {
        var element = $(this);
        var id = $(this).attr("data-id")
        $.ajax({
            type: "POST",
            url: "/user/addtowatchlist?id=" + id,
            data: id,
            success: function () {
                element.fadeOut(1);
                element.next().fadeIn();
                M.toast({ html: 'Added to watchlist.' })
            },
        });

    });
    $('.removefromwatchlist').click(function () {
        var element = $(this);
        var id = $(this).attr("data-id")
        $.ajax({
            type: "POST",
            url: "/user/removefromWatchlist?id=" + id,
            data: id,
            success: function () {
                element.fadeOut(1);
                element.prev().fadeIn();
                M.toast({ html: 'Removed from watchlist.' })
            },
        });
    });
</script>